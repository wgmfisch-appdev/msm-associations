<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All characters
    </h1>

    <a href="/characters/new" class="btn btn-block btn-outline-secondary">
      Add a new character
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Movie
        </th>

        <th>
          Actor
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @characters.each do |character| %>
      <tr>
        <td>
          <%= character.id %>
        </td>

        <td>
          <%= character.movie_id %>
        </td>

        <td>
          <%= character.actor_id %>
        </td>

        <td>
          <%= character.name %>
        </td>

        <td>
          <%= time_ago_in_words(character.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(character.updated_at) %> ago
        </td>

        <td>
          <a href="/characters/<%= character.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
