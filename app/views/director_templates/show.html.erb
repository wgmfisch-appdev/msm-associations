<h1>
  Director #<%= @director.id %> details
</h1>

<a href="/directors/<%= @director.id %>/edit">
  Edit director
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @director.image_url %>" width="320">
  </dd>
  <dt>
    Number of films
  </dt>
  <dd>
    <%= Movie.where(director_id: @director.id).count %>
  </dd>


</dl>

<a href="/delete_director/<%= @director.id %>" class="btn btn-danger">
  Delete director
</a>

<hr>

<a href="/directors">
  Go back
</a>

<div class="card mt-4">
  <div class="card-header">
    Filmography
  </div>
  <ul class="list-group list-group-flush">
    <% Movie.where(director_id: @director.id).each do |movie| %>
      <li class="list-group-item">
        <a href="/movies/<%= movie.id%>">
          <%= movie.title %>
        </a>
        (<%= movie.year %>)
      </li>
    <% end %>
  </ul>
  <div class="card-header">
    Add New Movie for this director
  </div>
  <ul>
    <li>
      <form action="/create_movie" >
        <!-- Label and input for title -->
        <div class="form-group">
          <label for="title">
            Title
          </label>
      
          <input type="text" id="title" name="title" class="form-control">
        </div>
      
        <!-- Label and input for year -->
        <div class="form-group">
          <label for="year">
            Year
          </label>
      
          <input type="text" id="year" name="year" class="form-control">
        </div>
      
        <!-- Label and input for duration -->
        <div class="form-group">
          <label for="duration">
            Duration
          </label>
      
          <input type="text" id="duration" name="duration" class="form-control">
        </div>
      
        <!-- Label and input for description -->
        <div class="form-group">
          <label for="description">
            Description
          </label>
      
          <textarea id="description" name="description" class="form-control" rows="3"></textarea>
        </div>
      
        <input type="hidden" name="director_id" value="<%= @director.id %>"></input>
      
        <!-- Label and input for image_url -->
        <div class="form-group">
          <label for="image_url">
            Image url
          </label>
      
          <input type="text" id="image_url" name="image_url" class="form-control">
        </div>
      
        <button class="btn btn-block btn-outline-secondary">
          Create movie
        </button>
      </form>
    </li>
  </ul>
</div>
